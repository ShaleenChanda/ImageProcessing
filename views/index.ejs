<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Processing Automation</title>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header class="header">
        <img 
            src="Fav.svg" 
            class="header--image"
        />
        <h2 class="header--title">Image Processing Automation</h2>
    </header>
    <div class="container">
        <div class="image-container">
            <img src="im1.jpg" alt="Image">
            <h5>Uploaded Image</h5>
            
        </div>
        <div class="image-container1">
            <img src="im1.jpg" alt="Image">
            <h5>Edited Image</h5>
            
        </div>
    </div>
    <div class="center-container">
        <label class="upload-button">
            Upload Image
            <input type="file" accept="image/jpeg, image/png, image/gif image/jpg">
        </label>
    </div>
    <div class="center-container">
        <div class="input-section">
            <label>
                <input type="checkbox"> Grayscale
            </label>
            <label>
                <input type="checkbox"> Blur
                <input type="number" min="1" max="10" step="1">
            </label>
            <label>
                <input type="checkbox"> Brightness
                <input type="number" min="0" max="100" step="1">
            </label>
            <label>
                <input type="checkbox"> Edge Detection
            </label>
        </div>
    </div>
    <div class="center-container">
        <div class="crop-section">
            <label>
                <input type="checkbox"> Crop
            </label>
            <label>
                Left
                <input type="number" min="0" max="100" step="1"> %
            </label>
            <label>
                Top
                <input type="number" min="0" max="100" step="1"> %
            </label>
            <label>
                Width
                <input type="number" min="0" max="100" step="1"> %
            </label>
            <label>
                Height
                <input type="number" min="0" max="100" step="1"> %
            </label>
        </div>
    <div class="center-container">
        <div class="resize-section">
            <label>
                <input type="checkbox"> Resize
            </label>
            <label>
                Width
                <input type="number" min="0" max="5000" step="1"> px
            </label>
            <label>
                Height
                <input type="number" min="0" max="5000" step="1"> px
            </label>
            <!-- Advisory paragraph for resize section -->
        </div>
    </div>

    <!-- Rotate Section -->
    <div class="center-container">
        <div class="rotate-section">
            <label>
                <input type="checkbox"> Rotate
            </label>
            <label>
                Angle
                <input type="number" min="-360" max="360" step="1"> degrees
            </label>
            <!-- Advisory paragraph for rotate section -->
    </div>
    </div>
    <button class="edit-button">
        Edit Image
    </button>
    <script src="index.js"></script>
</body>
</html>